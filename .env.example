APP_NAME=ManageX
APP_ENV=local
APP_KEY=
# SÉCURITÉ: Toujours mettre false en production!
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# SÉCURITÉ: Coût bcrypt (12+ recommandé pour production)
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# SÉCURITÉ: Utiliser 'warning' ou 'error' en production pour éviter les fuites d'info
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# ============================================
# CONFIGURATION SESSION - SÉCURITÉ
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
# SÉCURITÉ: Chiffrer les sessions en production
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
# SÉCURITÉ: Forcer HTTPS pour les cookies en production
SESSION_SECURE_COOKIE=false
# Note: En production, mettre SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ============================================
# REVERB / WEBSOCKETS - SÉCURITÉ
# ============================================
# En production, définir les origines autorisées (séparées par des virgules)
# REVERB_ALLOWED_ORIGINS=https://votredomaine.com,https://app.votredomaine.com

# ============================================
# COMPANY INFO - Pour les contrats et documents
# ============================================
COMPANY_NAME="${APP_NAME}"
COMPANY_ADDRESS=
COMPANY_CITY=
COMPANY_REPRESENTATIVE=
COMPANY_PHONE=
COMPANY_EMAIL=
COMPANY_WEBSITE=
# Identifiants légaux (optionnel)
COMPANY_RCCM=
COMPANY_NCC=
COMPANY_FULL_ADDRESS=

# ============================================
# MISTRAL AI - Chatbot RH & Insights Analytics
# ============================================
MISTRAL_API_KEY=
MISTRAL_BASE_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-small-latest
MISTRAL_MAX_TOKENS=1024
MISTRAL_TEMPERATURE=0.3
MISTRAL_TIMEOUT=30
AI_CACHE_TTL=900
