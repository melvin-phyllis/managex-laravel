# ============================================
# CONFIGURATION PRODUCTION - 500+ UTILISATEURS
# ============================================
# Copiez ce fichier vers .env et ajustez les valeurs

APP_NAME=ManageX
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Abidjan
APP_URL=https://votre-domaine.com

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

# Augmenter pour plus de workers PHP
PHP_CLI_SERVER_WORKERS=8

# Sécurité: Coût bcrypt élevé pour production
BCRYPT_ROUNDS=12

# Logging production
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ============================================
# BASE DE DONNÉES - MySQL/MariaDB recommandé
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=managex
DB_USERNAME=managex_user
DB_PASSWORD=votre_mot_de_passe_securise
# Pool de connexions (ajuster selon le serveur)
# DB_POOL_SIZE=100

# ============================================
# REDIS - CRITIQUE POUR PERFORMANCE
# ============================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
# Pour un cluster Redis:
# REDIS_CLUSTER=redis
# REDIS_URL=tcp://redis-node-1:6379,tcp://redis-node-2:6379

# ============================================
# CACHE - Utiliser Redis pour 500+ users
# ============================================
CACHE_STORE=redis
CACHE_PREFIX=managex_cache_

# ============================================
# SESSIONS - Utiliser Redis pour 500+ users
# ============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
# IMPORTANT: Activer en production HTTPS
SESSION_SECURE_COOKIE=true

# ============================================
# QUEUE - Utiliser Redis pour performance
# ============================================
QUEUE_CONNECTION=redis
# Queue dédiée pour les broadcasts (optionnel)
REDIS_QUEUE=default

# ============================================
# BROADCAST / WEBSOCKETS
# ============================================
BROADCAST_CONNECTION=reverb

# Reverb Configuration
REVERB_APP_ID=managex
REVERB_APP_KEY=votre_cle_reverb
REVERB_APP_SECRET=votre_secret_reverb
REVERB_HOST=127.0.0.1
REVERB_PORT=8080
REVERB_SCHEME=http

# CRITIQUE: Activer le scaling Redis pour 500+ connexions
REVERB_SCALING_ENABLED=true
REVERB_SCALING_CHANNEL=reverb

# Limites de connexions
REVERB_APP_MAX_CONNECTIONS=1000
REVERB_MAX_REQUEST_SIZE=10000

# Client-side (Vite)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ============================================
# EMAIL PRODUCTION
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.votre-provider.com
MAIL_PORT=587
MAIL_USERNAME=votre_email
MAIL_PASSWORD=votre_mot_de_passe
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@votre-domaine.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# STOCKAGE FICHIERS
# ============================================
FILESYSTEM_DISK=local
# Pour S3/Cloud Storage:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=eu-west-1
# AWS_BUCKET=managex-files

# ============================================
# OPTIMISATIONS ADDITIONNELLES
# ============================================
# Désactiver les logs de requêtes SQL en production
# DB_LOGGING=false

# Activer OPcache (dans php.ini)
# opcache.enable=1
# opcache.memory_consumption=256
# opcache.interned_strings_buffer=16
# opcache.max_accelerated_files=20000
# opcache.validate_timestamps=0

VITE_APP_NAME="${APP_NAME}"
