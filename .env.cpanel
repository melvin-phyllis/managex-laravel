# ============================================
# CONFIGURATION CPANEL / HEBERGEMENT MUTUALISE
# ============================================
# Copiez ce fichier en .env sur votre serveur cPanel
# et modifiez les valeurs selon votre configuration

APP_NAME=ManageX
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Abidjan
APP_URL=https://votredomaine.com

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

# Securite: Cout bcrypt eleve pour production
BCRYPT_ROUNDS=12

# ============================================
# LOGS - Production
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ============================================
# BASE DE DONNEES MYSQL (cPanel)
# ============================================
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=votreuser_managex
DB_USERNAME=votreuser_dbuser
DB_PASSWORD=votre_mot_de_passe_securise

# ============================================
# SESSION - Securite Production
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true

# ============================================
# BROADCAST - DESACTIVE pour cPanel
# ============================================
# WebSockets (Reverb) ne fonctionne pas sur hebergement mutualise
# Le chat utilise le polling AJAX a la place
BROADCAST_CONNECTION=log

# ============================================
# SYSTEME DE FICHIERS
# ============================================
FILESYSTEM_DISK=local

# ============================================
# QUEUE - Mode synchrone pour cPanel
# ============================================
# Sur hebergement mutualise, pas de worker permanent
# Les jobs s'executent immediatement (mode sync)
QUEUE_CONNECTION=sync

# ============================================
# CACHE - Fichiers pour cPanel
# ============================================
# Le cache fichier est plus fiable sur hebergement mutualise
CACHE_STORE=file
CACHE_PREFIX=managex_

# ============================================
# EMAIL - Resend API (recommande)
# ============================================
MAIL_MAILER=resend
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAIL_FROM_ADDRESS=noreply@votredomaine.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative: SMTP classique
# MAIL_MAILER=smtp
# MAIL_HOST=mail.votredomaine.com
# MAIL_PORT=587
# MAIL_USERNAME=noreply@votredomaine.com
# MAIL_PASSWORD=votre_mot_de_passe
# MAIL_ENCRYPTION=tls

# ============================================
# INFORMATIONS ENTREPRISE
# ============================================
COMPANY_NAME="${APP_NAME}"
COMPANY_ADDRESS=""
COMPANY_CITY=""
COMPANY_REPRESENTATIVE=""
COMPANY_PHONE=""
COMPANY_EMAIL=""
COMPANY_WEBSITE=""

# ============================================
# MISTRAL AI - Chatbot RH
# ============================================
MISTRAL_API_KEY=votre_cle_api_mistral
MISTRAL_BASE_URL=https://api.mistral.ai/v1
MISTRAL_MODEL=mistral-small-latest
MISTRAL_MAX_TOKENS=1024
MISTRAL_TEMPERATURE=0.3
MISTRAL_TIMEOUT=30
AI_CACHE_TTL=900
